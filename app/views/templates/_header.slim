.top-bar.navbar-inner
  .row-fluid
    .container
      .span2
        a.pull-left href="http://www.scscfw.com"
          img src="/assets/logo.png" alt="四川生产服务网"
      .span10
        a.pull-right.muted href="http://www.scscfw.com"
          i.icon-home.text-info
          span 网站首页
          span
        -if session[:cas_user].nil?
          a.pull-right.muted href="http://www.scscfw.com:443/login?server=http://www.scscfw.com:90/users"
            i.icon-signin.text-info
            span 登录
        -else
          a.pull-right.muted href="/logout"
            i.icon-signout.text-info
            span 退出